  <script>
    function copyCode(id, btn) {
      const el = document.getElementById(id);
      const code = el.innerText;
      navigator.clipboard.writeText(code).then(() => {
        btn.innerText = "Copied! âœ…";
        setTimeout(() => {
          btn.innerText = "Copy";
        }, 2000);
      });
    }
  </script>
